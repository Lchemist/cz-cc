    "word-wrap": "^1.2.3"
  },
  "peerDependencies": {
    "commitizen": ">=4"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/commitlint__load": "^8.3.1",
    "@types/node": "^14.14.25",
    "husky": "^5.0.9",
    "pinst": "^2.1.4",
    "rimraf": "^3.0.2",
